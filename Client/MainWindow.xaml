<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
       mc:Ignorable="d"
        Title="MainWindow" Height="1000" Width="1500"
        ResizeMode="CanResize"
        Background="White">


    <Window.Resources>
        <!-- Style definition -->
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="20">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>
    <ScrollViewer>
        <Grid Background="Black">
            <Grid.ColumnDefinitions>

                <ColumnDefinition Width="200">
                </ColumnDefinition>

                <ColumnDefinition>

                </ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Button Content="Problem List" HorizontalAlignment="Center" Margin="0,457,0,0" VerticalAlignment="Top" Click="Button_Click" Background="#FF464646" Foreground="#FFD2D2D2" Height="35" Width="200" FontSize="20"/>
            <ListBox
            Name="ProblemListBox" Visibility="Collapsed"  Margin="0,0,973,0" Background="#FF464646" Grid.Column="1" FontSize="24" Foreground="#FFD2D2D2" SelectionChanged="ProblemListBox_SelectionChanged_1">


            </ListBox>

            <TextBlock  Name="ProblemStatment" Grid.Column="1" HorizontalAlignment="Left" Margin="108,167,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="#FFD2D2D2" Height="201" Width="509"><Run Text="You are given an integer array a"/><LineBreak/><Run Text=" of length n"/><LineBreak/><Run Text="."/><LineBreak/><Run/><LineBreak/><Run Text="You can perform the following operation: choose an element of the array and replace it with any of its neighbor's value."/><LineBreak/><Run/><LineBreak/><Run Text="Your task is to calculate the minimum possible total sum of the array if you can perform the aforementioned operation at most k"/><LineBreak/><Run Text=" times."/><LineBreak/><Run/><LineBreak/><LineBreak/><Run Text="."/></TextBlock>
            <Border Grid.Column="1" Margin="108,123,1127,839" Background="#FF3D3D3D" CornerRadius="5">
                <TextBlock x:Name="ProblemRating" TextWrapping="Wrap" Text="1500" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#FFD2D2D2"/>
            </Border>
            <Label Grid.Column="1" Content="Input:" HorizontalAlignment="Left" Margin="108,357,0,0" VerticalAlignment="Top" Foreground="#FFD2D2D2" FontSize="16"/>
            <TextBlock Name="PrblemInput" Grid.Column="1" HorizontalAlignment="Left" Margin="109,410,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="526" Height="142" Foreground="#FFD2D2D2"><Run Text="The second line gives spell s— a string of length n consisting of lowercase Latin letters."/><LineBreak/><Run/><LineBreak/><Run Text="The third line gives spell t — a string of length n consisting of lowercase Latin letters."/><LineBreak/><Run/><LineBreak/><Run Text="It is guaranteed that the sum of n"/><LineBreak/><Run Text=" values over all test cases does not exceed 2⋅105"/><LineBreak/><Run Text=". Note that there is no limit on the sum of k"/><LineBreak/><Run Text=" values over all test cases."/></TextBlock>
            <Label Grid.Column="1" Content="Output" HorizontalAlignment="Left" Margin="108,557,0,0" VerticalAlignment="Top" Foreground="#FFD2D2D2" FontSize="16"/>
            <TextBlock Name="ProblemOutput" Grid.Column="1" HorizontalAlignment="Left" Margin="109,593,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="526" Height="142" Foreground="#FFD2D2D2"><Run Text="The second line gives spell s— a string of length n consisting of lowercase Latin letters."/><LineBreak/><Run/><LineBreak/><Run Text="The third line gives spell t — a string of length n consisting of lowercase Latin letters."/><LineBreak/><Run/><LineBreak/><Run Text="It is guaranteed that the sum of n"/><LineBreak/><Run Text=" values over all test cases does not exceed 2⋅105"/><LineBreak/><Run Text=". Note that there is no limit on the sum of k"/><LineBreak/><Run Text=" values over all test cases."/></TextBlock>
            <Label Grid.Column="1" Content="Example 1:" HorizontalAlignment="Left" Height="26" Margin="113,755,0,0" VerticalAlignment="Top" Width="98" Foreground="#FFD2D2D2" FontWeight="Bold" FontSize="14"/>
            <Label Grid.Column="1" Content="Input :" HorizontalAlignment="Left" Height="26" Margin="138,786,0,0" VerticalAlignment="Top" Width="48" Foreground="#FFD2D2D2" FontWeight="Bold"/>
            <TextBlock Name="FirstTestCaseInput" Grid.Column="1" HorizontalAlignment="Left" Margin="223,791,0,0" TextWrapping="Wrap" Text="150" VerticalAlignment="Top" Foreground="#FFD2D2D2"/>
            <Label Grid.Column="1" Content="Output :" HorizontalAlignment="Left" Height="26" Margin="138,820,0,0" VerticalAlignment="Top" Width="58" Foreground="#FFD2D2D2" FontWeight="Bold"/>
            <TextBlock Name="FirstTestCaseOutput" Grid.Column="1" HorizontalAlignment="Left" Margin="223,825,0,0" TextWrapping="Wrap" Text="150" VerticalAlignment="Top" Foreground="#FFD2D2D2" RenderTransformOrigin="0.536,0.909"/>
            <Label Grid.Column="1" Content="Example 2:" HorizontalAlignment="Left" Height="26" Margin="113,854,0,0" VerticalAlignment="Top" Width="98" Foreground="#FFD2D2D2" FontWeight="Bold" FontSize="14"/>
            <Label Grid.Column="1" Content="Input :" HorizontalAlignment="Left" Height="26" Margin="138,890,0,0" VerticalAlignment="Top" Width="48" Foreground="#FFD2D2D2" FontWeight="Bold"/>
            <Label Grid.Column="1" Content="Output :" HorizontalAlignment="Left" Height="26" Margin="138,921,0,0" VerticalAlignment="Top" Width="58" Foreground="#FFD2D2D2" FontWeight="Bold"/>
            <TextBlock Name="SecondTestCaseInput" Grid.Column="1" HorizontalAlignment="Left" Margin="223,895,0,0" TextWrapping="Wrap" Text="150" VerticalAlignment="Top" Foreground="#FFD2D2D2"/>
            <TextBlock Name="SecondTestCaseOutput" Grid.Column="1" HorizontalAlignment="Left" Margin="223,926,0,0" TextWrapping="Wrap" Text="150" VerticalAlignment="Top" Foreground="#FFD2D2D2"/>
            <TextBox  Name="Code" Grid.Column="1" HorizontalAlignment="Left" Margin="765,210,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="442"  Height="207"/>
            <ComboBox Name="Language" Grid.Column="1" HorizontalAlignment="Left" Margin="765,151,0,0" VerticalAlignment="Top" Width="120" Foreground="#FFD2D2D2" Background="{x:Null}">
                <ComboBoxItem Content="Java 21"/>

            </ComboBox>

            <TextBlock Name="Verdict" Grid.Column="1" HorizontalAlignment="Left" Margin="932,357,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="#FFD2D2D2" Height="35" Width="108" FontSize="22" FontWeight="Bold"/>
            <Button Content="SUBMIT" BorderBrush="Wheat" Grid.Column="1"  HorizontalAlignment="Left" Margin="1091,0,0,0" VerticalAlignment="Center" Click="Button_Click_1" Height="30" Width="116" Background="Transparent" Style="{StaticResource RoundedButtonStyle}" Foreground="#FFD2D2D2" FontSize="14" />
            <TextBlock x:Name="ProblemName" Grid.Column="1" HorizontalAlignment="Left" Margin="109,79,0,0" TextWrapping="Wrap" Text="7. Reverse Integer" VerticalAlignment="Top" Foreground="#FFD2D2D2" FontSize="24"/>
        </Grid>
    </ScrollViewer>
</Window>
