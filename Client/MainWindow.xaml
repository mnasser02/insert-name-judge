<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
       mc:Ignorable="d"
        Title="MainWindow" Height="1000" Width="1500"
        ResizeMode="NoResize"
        Background="White">

    <Window.Resources>
        <!-- Style definition -->
        <Style x:Key="HoverTextBlockStyle" TargetType="TextBlock">
            <Setter Property="Background" Value="#FF4A4646"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="23,0,0,0"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="Height" Value="27"/>
            <Setter Property="Width" Value="578"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF333333"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border>
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="Black" Offset="0"/>
                <!-- Darker blue color -->
                <GradientStop Color="#FF8D8D8D" Offset="1"/>
                <!-- Lighter blue color -->
            </LinearGradientBrush>
        </Border.Background>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="270" >

                </ColumnDefinition>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="75"/>
                <RowDefinition/>
                <RowDefinition Height="75"/>


            </Grid.RowDefinitions>
            <TextBlock Text="ChkekForces" 
                   VerticalAlignment="Top"
                   HorizontalAlignment="Center"
                   Foreground="YellowGreen"
                   FontWeight="Heavy" Height="24" Width="142" Margin="0,24,0,0" FontSize="20"></TextBlock>
            <ListBox Grid.Row="1" Grid.Column="0" Margin="10" Background="Transparent" BorderThickness="0"
         Foreground="White" SelectionChanged="ListBox_SelectionChanged"
         Name="ProbList">

            </ListBox>
            <Border Grid.Column="1" HorizontalAlignment="Center" Margin="0,24,0,0" Grid.Row="1" VerticalAlignment="Top" Height="252" Width="595" Background="#FF343434" CornerRadius="20">

                <TextBlock Grid.Row="1" Grid.Column="1" 
                   Foreground="White" TextWrapping="Wrap" Name="statementTextBlock"  >

                </TextBlock>
            </Border>
            <TextBox Grid.Row="1" Grid.Column="2" Margin="23,134,14,417" Background="White" 
                     Foreground="Black" TextWrapping="Wrap" Name="codeTextBox"/>
            <ComboBox Name="LangDropBox" Width="200" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="2" Margin="23,85,0,0" Grid.Row="1">

                <!-- Add more items as needed -->
            </ComboBox>
            <Label Name="ProbName" Grid.Column="1" Content="" HorizontalAlignment="Left" Margin="62,0,0,0" VerticalAlignment="Center" Width="96" Foreground="White"/>
            <Border Grid.Column="1" HorizontalAlignment="Center" Margin="0,437,0,0" Grid.Row="1" VerticalAlignment="Top" Height="126" Width="595" Background="Black" CornerRadius="20">
                <TextBlock Name="Input" Text="input" TextWrapping="Wrap" VerticalAlignment="Top" Width="595"/>
            </Border>
            <Border Grid.Column="1" HorizontalAlignment="Center" Margin="0,299,0,0" Grid.Row="1" VerticalAlignment="Top" Height="118" Width="595" Background="#FF36454F" CornerRadius="20">
                <TextBlock Name="Output" Text="input" TextWrapping="Wrap" VerticalAlignment="Top" Width="595" Margin="0,10,0,0"/>
            </Border>
            <Button Grid.Column="2" Content="Button" Margin="245,591,236,0" Grid.Row="1" VerticalAlignment="Top" Height="49" Width="134"
        Background="Black" Foreground="Yellow" BorderBrush="#007ACC" BorderThickness="2"
        FontSize="16" FontWeight="Bold" Padding="10"
        HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
        Cursor="Hand" RenderTransformOrigin="0.5,0.5">
                <Button.Effect>
                    <DropShadowEffect Color="#B2B2B2" Direction="270" ShadowDepth="3" Opacity="0.5"/>
                </Button.Effect>

            </Button>

            <TextBlock Name="input1" Grid.Column="2" HorizontalAlignment="Left" Margin="23,437,0,0" Grid.Row="1" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="27" Width="578" Style="{StaticResource HoverTextBlockStyle}"/>
            <TextBlock  Name="output1" Grid.Column="2" HorizontalAlignment="Left" Margin="23,464,0,0" Grid.Row="1" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="27" Width="578" Style="{StaticResource HoverTextBlockStyle}"/>
            <TextBlock  Name="input2" Grid.Column="2" HorizontalAlignment="Left" Margin="23,491,0,0" Grid.Row="1" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="27" Width="578" Style="{StaticResource HoverTextBlockStyle}"/>
            <TextBlock  Name="output2" Grid.Column="2" HorizontalAlignment="Left" Margin="23,518,0,0" Grid.Row="1" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="27" Width="578" Style="{StaticResource HoverTextBlockStyle}"/>


        </Grid>

    </Border>
</Window>
